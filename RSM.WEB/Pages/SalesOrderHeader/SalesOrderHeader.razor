@page "/SalesOrderHeader"
@using Microsoft.AspNetCore.Authorization

<PageTitle>Sales Order Header</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="fw-bold">Sales Order Header</h1>
            <p class="text-muted fs-6">In this page you can see all the information of the table Sales Order Header</p>
            <hr class="my-4" style="border-top: 1.5px solid black;">
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="table-container" style="max-height: 400px; max-width: 100%; overflow-y: auto;">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Revision Number</th>
                            <th>Order Date</th>
                            <th>Due Date</th>
                            <th>Status</th>
                            <th>Order Number</th>
                            <th>Sub Total</th>
                            <th>TaxAmt</th>
                            <th>Freight</th>
                            <th>Total Due</th>
                            <th>Ship To Address</th>
                            <th>Bill To Address</th>
                            <th>Customer ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in salesOrderHeader)
                        {
                            <tr>
                                <td>@category.SalesOrderID</td>
                                <td>@category.RevisionNumber</td>
                                <td>@category.OrderDate</td>
                                <td>@category.DueDate</td>
                                <td>@category.Status</td>
                                <td>@category.SalesOrderNumber</td>
                                <td>@category.SubTotal</td>
                                <td>@category.TaxAmt</td>
                                <td>@category.Freight</td>
                                <td>@category.TotalDue</td>
                                <td>@category.ShipToAddressID</td>
                                <td>@category.BillToAddressID</td>
                                <td>@category.CustomerID</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>