@page "/SalesTerritory"
@using Microsoft.AspNetCore.Authorization

<PageTitle>Sales Territory</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="fw-bold">Sales Territory</h1>
            <p class="text-muted fs-6">In this page you can see all the information of the table Sales Territory</p>
            <hr class="my-4" style="border-top: 1.5px solid black;">
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <button type="button" class="btn btn-primary">Filter by</button>
        </div>
        <div class="col-md-12 text-end">
            <br />
            <input type="text" class="form-control mb-3" placeholder="Write your filter value">
            <br />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="table-container" style="max-height: 400px; max-width: 100%; overflow-x: auto; overflow-y: auto;">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Territory ID</th>
                            <th>Name</th>
                            <th>Country Region Code</th>
                            <th>Group</th>
                            <th>Sales YTD</th>
                            <th>Sales Last Year</th>
                            <th>CostYTD</th>
                            <th>rowguid</th>
                            <th>ModifiedDate</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in salesTerritory)
                        {
                            <tr>
                                <td>@category.TerritoryID</td>
                                <td>@category.Name</td>
                                <td>@category.CountryRegionCode</td>
                                <td>@category.Group</td>
                                <td>@category.SalesYTD</td>
                                <td>@category.SalesLastYear</td>
                                <td>@category.CostYTD</td>
                                <td>@category.rowguid</td>
                                <td>@category.ModifiedDate</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
